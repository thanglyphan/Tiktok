@model TikTokCalendar.DAL.ModelDataWrapper

@{
    EventUserStatHandler EUSH = new EventUserStatHandler();
}

<script type="text/javascript">
			jQuery(function () {
				jQuery('.activator.usersgoing').BAToolTip({
				    tipOpacity: 0.9,
				    tipOffset: 20
				});
			})
		</script>

