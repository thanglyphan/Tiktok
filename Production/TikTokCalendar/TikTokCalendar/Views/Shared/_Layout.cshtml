@using TikTokCalendar.DAL
@using TikTokCalendar.Extras
@using TikTokCalendar.Models
@model TikTokCalendar.DAL.ModelDataWrapper
@{
    var eventCount = Model.GetEventCount();
    var searchLine = "";
    if (Model.isFiltered || Model.searchWords.Length > 0)
    {
        searchLine = "border-left: 1px solid #c6cedb;";
    }
    string check1 = "", check2 = "", check3 = "";
    if (Model.showingLectures)
    {
        check1 = "checked";
    }
    if (Model.showingAssignments)
    {
        check2 = "checked";
    }
    if (Model.showingExams)
    {
        check3 = "checked";
    }
}
<!DOCTYPE html>
<html lang="@Model.CultureText"> <!-- Lang is set so it follows accessability guidelines -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <title>Tiktok</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("/Content/font-awesome.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("/Content/jquery-ui.css")">
    <link rel="stylesheet" href="@Url.Content("/Content/main.css")">
    <link rel="stylesheet" href="@Url.Content("/Content/bs-modal.css")">
    <link rel="stylesheet" href="@Url.Content("/Content/reset.css")">
    <link rel="stylesheet" href="@Url.Content("/Content/mobile.css")">
    <link rel="stylesheet" href="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/SlickNav/1.0.5.5/slicknav.min.css")">
    <link rel="stylesheet" href="@Url.Content("/Content/modal.css")">
    <link rel="stylesheet" href="@Url.Content("/Content/vex/vex.css")" />
    <link rel="stylesheet" href="@Url.Content("/Content/vex/vex-theme-default.css")" />

    @Scripts.Render("~/bundles/random") <!-- lookup: BundleConfig.cs -->
    <script>vex.defaultOptions.className = 'vex-theme-default';</script>


    @Scripts.Render("~/bundles/jquery")
</head>
<body onload="checkLogin()">

    <script>
        $(function () {
            $('#tags')
                .autocomplete({
                    source: function (request, response) {
                        $.ajax({
                            url: '@Url.Action("AutoComplete")',
                            dataType: "json",
                            contentType: 'application/json, charset=utf-8',
                            data: {
                                search: $("#tags").val()
                            },
                            success: function (data) {

                                response($.map(data,
                                    function (item) {
                                        return {
                                            label: item
                                        };
                                    }));
                            },
                            error: function (xhr, status, error) {
                                alert(error);
                            }
                        });
                    },
                    minLength: 2
                });
        });


    </script>

    <!-- The navbar with the tiktok logo -->
    <header class="header-desktop">
        <div class="header-content">
            <div class="left-1">
                <a href="/" class="logo">
                    <i class="fa fa-calendar-check-o fa-2x"></i>
                </a>
            </div>

            <div class="left-2">
                <div class="ui-widget">
                    <label for="tags"></label>

                    @using (Html.BeginForm("Index", "Home"))
                    {
                        <input id="tags" name="tags" type="text" class="search-box" placeholder="@Resources.LocalizedText.SearchLabel" value="@Model.searchWords" />

                        <input type="hidden" name="lecture" value="@check1" />
                        <input type="hidden" name="assignment" value="@check2" />
                        <input type="hidden" name="exam" value="@check3" />
                        <input type="hidden" name="filtered" value="true" />}
                </div>
            </div>

            <span class="results" style="@searchLine">
                @if (Model.isFiltered || Model.searchWords.Length > 0)
                {
                    if (eventCount > 1)
                    {
                        <span>@eventCount @Resources.LocalizedText.FilterXEventsFoundLabel</span>
}
                    else if (eventCount > 0)
                    {
                        <span>@Resources.LocalizedText.Filter1EventFoundLabel</span>
}
                    else
                    {
                        <span>@Resources.LocalizedText.FilterNoEventsFoundLabel</span>
}
                }
            </span>

            <div class="filter-container">
                @using (Html.BeginForm("Index", "Home"))
                {
                    <input type="hidden" name="tags" value="@Model.searchWords" />
                    <div class="filter">
                        <input id="schoolClass" type="checkbox" name="lecture" @check1 onchange="this.form.submit()" /><label for="schoolClass">
                            <span>@Resources.LocalizedText.SearchLectureLabel</span>
                        </label>
                    </div>
                    <div class="filter">
                        <input id="assignment" type="checkbox" name="assignment" @check2 onchange="this.form.submit()" /><label for="assignment">
                            <span>@Resources.LocalizedText.SearchAssignmentLabel</span>
                        </label>
                    </div>
                    <div class="filter">
                        <input id="exam" type="checkbox" name="exam" @check3 onchange="this.form.submit()" /><label for="exam">
                            <span>@Resources.LocalizedText.SearchExamLabelLabel</span>
                        </label>
                    </div>
                    <input type="hidden" name="filtered" value="true" />}
            </div>
     
            <div class="right-2">

                <div class="dropdown">
                    <button class="dropbtn"><i class="fa fa-cog fa-2x"></i></button>
                    <div class="dropdown-content">
                        <ul>
                            <li>
                                <!-- TODO: style and position -->
                                <a href="@Url.Action("Set", "Language", new { language = "nb" })"><img src="@Url.Content("~/img/flag_no.png")" />&nbsp;Bokmål</a>
                                </li>
                            <li>
                                @*<img src="~/img/flag_gb.png" />@Html.ActionLink("English", "Set", "Language", new { language = "en" }, null)*@
                                <a href="@Url.Action("Set", "Language", new { language = "en" })"><img src=" @Url.Content("~/img/flag_gb.png")" />&nbsp;English</a>
                              </li>
                            <li class="show-rooms">
                                  @if (Model.User.Course == SchoolCourses.VisAlt)
                                {
                                    <a data-toggle="modal" data-target="#login-modal">
										<span>@Resources.LocalizedText.LogInButton</span>
                                    </a>}
                                else
                                {
                                    using (Html.BeginForm("LogOut", "Home"))
                                    {
                                        <button type="submit" class="btn btn-logout">@Resources.LocalizedText.LogOutButton</button>
                                    }
                                }
                            </li>
                            <li class="show-rooms">
                                <a data-toggle="modal" data-target="#vis-rom-modal">
                                    <span>@Resources.LocalizedText.ShowAvailibleRoomsButton</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>


            </div>

            <div class="right-1">
                
            </div>

            <script>
                function delCookie() {
                    $.ajax({
                        url: "/Home/DeleteCookies",
                        type: "POST",
                        dataType: "json",
                        success: function (data) {
                            console.log(data);
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            console.log("Feil ved sletting av cookies [delCookies()]");
                        }
                    });
                }
            </script>

        </div>
    </header>

    @*<!-- Ledige rom modal -->
    <div class="content-hidden modal fade" id="vis-rom-modal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    @Resources.LocalizedText.AvailibleRoomsWindowName
                </div>

                <!-- Modal body -->
                <div class="modal-body" style="margin: 0;">
                    <table id="vis-rom-modal" class="table table-bordered table-hover rooms-available">
                        <tr>
                            <th>@Resources.LocalizedText.AvailibleRoomOverviewRoomLabel</th>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: 10%">8:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">9:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">10:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">11:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">12:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">13:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">14:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">15:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">16:15</div>
                                    <div class="progress-bar" role="progressbar" style="width: 10%">17:15</div>
                                </div>
                            </td>
                        </tr>
                        @{foreach (var room in Model.Rooms)
                            {
                                <tr>
                                    <th>@room.RoomName</th>
                                    <td>
                                        <div class="progress">
                                            @{    foreach (var timeSlot in room.Availability)
                                                {
                                                    var startHour = (timeSlot.Start.Hour - TimeSlot.StartHour) * 10;
                                                    var lenght = (timeSlot.GetPercentOfDay() + 2.5).ToString().Replace(",", ".");
                                                    <div class="progress-bar progress-bar-danger availability-bar" role="progressbar" style="margin-left: @startHour%; width: @lenght%">@timeSlot.Event.Subject.Name</div>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>      }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>*@

    <!-- Log in window modal -->
    <!-- TODO This hides the modal permanently, this should rather stop the modal from initially showing instead of hiding the whole thing -->
    @if (!Model.isFiltered && string.IsNullOrEmpty(Model.searchWords))
    {
        <div class="content-hidden modal fade" id="login-modal" role="dialog" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal header -->
                    <div class="modal-header">
                        
                        @Resources.LocalizedText.LoginWindowName
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        @using (Html.BeginForm("LogIn", "Home"))
                        {
                            if (Model.FailedLogin)
                            {
                            <!-- TODO css wizards: style this -->
                                <p class="fail-login">@Resources.LocalizedText.InvalidLoginLabel</p>
                            }
                            <input type="text" class="form-control" id="email" name="username" placeholder="@Resources.LocalizedText.UsernameInputLabel">
                            <input type="password" class="form-control" id="pwd" name="password" placeholder="@Resources.LocalizedText.PasswordInputLabel">

                            <button type="submit" class="btn btn-md btn-primary btn-block btn-login">@Resources.LocalizedText.LogInButton</button>
                        }
                        <span data-toggle="modal" data-target="#login-modal">
                            <a class="btn btn-md btn-default btn-block btn-free-rooms" data-toggle="modal" data-target="#vis-rom-modal">@Resources.LocalizedText.ShowAvailibleRoomsButton</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }

    @RenderBody()

    <footer class="footer"></footer>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/SlickNav/1.0.5.5/jquery.slicknav.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBZhjS1OmkOX54eiCCHFZ9oKzloPO2kOo4&sensor=false&extension=.js"></script>
    @Scripts.Render("~/bundles/showinfo")
    @Scripts.Render("~/bundles/script")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tooltip")
    @Scripts.Render("~/bundles/countdown")
    @RenderSection("scripts", false)

</body>
</html>